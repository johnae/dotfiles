# alt would be Mod1
set $mod Mod4

set $font_name San Fransisco Display Bold 9
set $bg-color #004b46
set $border-color $bg-color
set $inactive-bg-color #001111
set $text-color #fdf6e3
set $inactive-text-color #839496
set $urgent-bg-color #E53935
set $font pango:System San Fransisco Display Bold 9

# Font for window titles. Will also be used by the bar unless a different font

# text rendering and scalability on retina/hidpi displays (thanks to pango).
font $font
# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Map caps-lock to ctrl
exec_always --no-startup-id "setxkbmap -layout se -option ctrl:nocaps,lv3:lalt_switch; sleep 1; setxkbmap -variant mac"

workspace_layout tabbed

# start a terminal
bindsym $mod+Return exec gnome-terminal

# actually toggle between left/right screen
bindsym $mod+m move workspace to output right

# kill focused window
bindsym $mod+Shift+q kill

# lock screen
bindsym Control+$mod+l exec dm-tool lock

# scratchpad
bindsym $mod+s scratchpad show
bindsym $mod+Shift+s move scratchpad

# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 1 +10%; pkill -RTMIN+10 i3blocks"
bindsym XF86AudioLowerVolume  exec --no-startup-id "pactl set-sink-volume 1 -10%; pkill -RTMIN+10 i3blocks"
bindsym XF86AudioMute exec --no-startup-id "pactl set-sink-mute 1 toggle; pkill -RTMIN+10 i3blocks"

# Screen brightness controls
bindsym $mod+F6 exec --no-startup-id xbacklight -inc 30 # increase screen brightness
bindsym $mod+F5 exec --no-startup-id xbacklight -dec 30 # decrease screen brightness

# External monitor on/off (work)
#bindsym $mod+Shift+o exec "~/.i3blocks/external_display right; pkill -RTMIN+11 i3blocks"
#bindsym $mod+Shift+x exec "~/.i3blocks/external_display off; pkill -RTMIN+11 i3blocks"
bindsym $mod+Shift+o exec "~/.i3blocks/external_display right"
bindsym $mod+Shift+x exec "~/.i3blocks/external_display off"

# start rofi (as a program launcher)
bindsym $mod+d exec rofi -fuzzy -show run -lines 3 -eh 2 -padding 300 -fullscreen -opacity "85" -bw 0 -bc "$bg-color" -bg "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Fransisco Display 18"

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# calculator
bindsym $mod+c exec calc

# change container layout (stacked, tabbed, toggle split)
#bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

set $workspace1 "1: Chrome "
