# Start applications
exec gnome-terminal --role=dev -x ssh john@localhost
exec chromium-browser
exec gnome-terminal --role=eterminal
exec pgadmin3
exec chromium-browser --user-data-dir=/home/john/.config/chromium-private --app=https://inbox.google.com/u/1/
exec chromium-browser --user-data-dir=/home/john/.config/chromium-private --app=https://inbox.google.com/u/0/
exec chromium-browser --user-data-dir=/home/john/.config/chromium-private --app=https://gitter.im/AdTEN
for_window [title="^Inbox - john.*$"] move workspace number 2
for_window [title="^AdTEN - Gitter$"] move window to scratchpad, scratchpad show, resize set 1800 1000, move position center
exec ~/Local/bin/adten-keepass
exec ~/Local/bin/johnae-keepass

workspace_auto_back_and_forth yes
bindsym $mod+z workspace back_and_forth

new_window pixel 1
